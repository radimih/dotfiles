# From official installation script:
# https://raw.githubusercontent.com/z-shell/zi-src/main/lib/sh/install.sh

source "{{ zinit_home_dir }}/{{ zinit_bin_dirname }}/zi.zsh"
autoload -Uz _zi
(( ${+_comps} )) && _comps[zi]=_zi

# From zinit_plugins Ansible varialbe:

{% for plugin in zinit_plugins -%}
    {% if "ices" in plugin -%}
        zinit ice
        {%- for ice in plugin.ices %}
            {{- ' ' }}
            {%- if ice is mapping %}
                {%- if "value" in ice -%}
                    {{ ice.name }}='{{ ice.value }}'
                {%- else -%}
                    {{ ice.name }}
                {%- endif -%}
            {%- else -%}
                {{ ice }}
            {%- endif -%}
            {%- if loop.last %}
                {{- '\n    ' -}}
            {% endif -%}
        {% endfor -%}
    {% endif -%}
    zi {{ plugin.type }} {{ plugin.name }}
{% endfor %}
