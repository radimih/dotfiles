{
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.cursorStyle": "line",
    "editor.cursorSurroundingLines": 5,
    "editor.cursorSurroundingLinesStyle": "all",
    "editor.insertSpaces": false,
    "editor.lineNumbers": "on",
    "editor.renderControlCharacters": true,
    "editor.tabSize": 8,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "files.associations": {
        "**/*ansible*/**/*.yml": "ansible",
        "**/defaults/**/*.yml": "ansible",
        "**/handler/*.yml": "ansible",
        "**/inventory/*/*.yml": "ansible",
        "**/playbooks/**/*.yml": "ansible",
        "**/roles/**/*.yml": "ansible",
        "**/tasks/**/*.yml": "ansible",
        "**/vars/**/*.yml": "ansible",
        "**/*_vars/**/*.yml": "ansible",
        "helmfile.yaml": "helm",
        "helmfile.yml": "helm",
        "*.yaml.gotmpl": "helm",
        "*.yml.gotmpl": "helm"
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 3000,
    "files.insertFinalNewline": true,
    "git.autofetch": true,
    "git.closeDiffOnOperation": true,
    "git.confirmSync": false,
    "git.ignoreLegacyWarning": true,
    "git.suggestSmartCommit": false,
    "security.workspace.trust.untrustedFiles": "open",
    "telemetry.telemetryLevel":"off",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "terminal.integrated.env.linux": {
      "EDITOR": "code --wait"
    },
    "terminal.integrated.fontFamily": "IosevkaTerm Nerd Font Mono",
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.smoothScrolling": true,
    "window.titleBarStyle": "custom",
    "workbench.colorTheme": "Cobalt2",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "workbench.statusBar.visible": true,
    "ansible.lightspeed.enabled": false,
    "cSpell.enableFiletypes": [
        "ansible",
        "ansible-jinja",
        "dockerfile",
        "hcl",
        "ini",
        "jinja",
        "jinja-yaml",
        "properties",
        "shellscript"
    ],
    "cSpell.language": "en,ru",
    "cSpell.userWords": [
        "appuser",
        "chdir",
        "CICD",
        "couchbase",
        "dockerized",
        "dotfiles",
        "entrypoint",
        "gunicorn",
        "healthcheck",
        "hostvars",
        "ISODMS",
        "liquibase",
        "Mikhailov",
        "minio",
        "msbuild",
        "patroni",
        "portainer",
        "preprod",
        "pytest",
        "rabbitmq",
        "radimih",
        "radimir",
        "sharedsettings",
        "subproccess",
        "thirdparty",
        "автодополнение",
        "Деплой",
        "деплоя",
        "пайплайн",
        "пайплайна",
        "плейбука",
        "проксировать",
        "самоподписанным",
        "Склонировать"
    ],
    "docker.showStartPage": false,
    "gitlab.instanceUrl": "https://git.it2g.ru",
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.plusFeatures.enabled": false,
    "projectManager.git.baseFolders": [
        "~/dotfiles",
        "~/1git"
    ],
    "projectManager.git.maxDepthRecursion": 3,
    "projectManager.ignoreProjectsWithinProjects": true,
    "projectManager.removeCurrentProjectFromList": false,
    "projectManager.showParentFolderInfoOnDuplicates": true,
    "projectManager.sortList": "Path",
    "redhat.telemetry.enabled": false,
    "todo-tree.filtering.excludeGlobs": [
        "**/node_modules",
        "**/*.js",
        "**/*.ts",
        "**/*.tsx",
        "**/*.scss"
    ],
    "todo-tree.filtering.includeHiddenFiles": true,
    "todo-tree.general.enableFileWatcher": false,
    "todo-tree.general.statusBar": "current file",
    "vim.handleKeys": { "<C-f>": false },
    "vim.hlsearch": true,
    "vim.leader": "<Space>",
    "vim.normalModeKeyBindingsNonRecursive": [

        {
            "before": ["<Leader>", "/"],
            "commands": [":noh"]
        },
        {
            "before": ["/", "/"],
            "commands": [":noh"]
        },
        {
            "before": ["g", "V"],
            "after": ["`", "[", "v", "`", "]"]
        },
        {
            "before": ["<Leader>", "p"],
            "commands": ["workbench.action.showCommands"]
        }
    ],
    "vscode-kubernetes.log-viewer.destination": "Webview",
    "vscode-kubernetes.log-viewer.follow": true,
    "vscode-kubernetes.log-viewer.since": 300,
    "vscode-kubernetes.log-viewer.tail": -1,
    "vscode-kubernetes.log-viewer.timestamp": false,
    "vscode-kubernetes.log-viewer.wrap": false
}
